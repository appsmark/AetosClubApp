<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded" navigatedTo="onNavigatedTo">
    <ScrollView>
        <GridLayout>
            <StackLayout>
                <Image src="~/images/login_logo.png" cssClass="logoImage" stretch="fill" width="100" height="100"/>        
                <Label text="Login with Tasks account" cssClass="header"/>        
                <TextField id="username" hint="username" />
                <TextField id="password" secure="true" hint="password"/>        
                <Button text="LOGIN" tap="loginTap" cssClass="primaryActionButton"/>
                <Button text="SIGN UP" tap="registerTap" cssClass="secondaryActionButton"/>
            </StackLayout>
            <ActivityIndicator id="activityIndicator"/>
        </GridLayout>
    </ScrollView>
</Page>